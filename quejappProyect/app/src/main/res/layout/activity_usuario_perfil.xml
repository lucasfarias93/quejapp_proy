<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_tabs_180">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/Size60dp"
        android:paddingRight="@dimen/Size60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/Size12dp">

                <ImageView
                    android:layout_width="@dimen/Size20dp"
                    android:layout_height="@dimen/Size20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/message" />

                <EditText
                    android:id="@+id/mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Size15dp"
                    android:background="#00000000"
                    android:hint="@string/direccion_de_correo"
                    android:inputType="textEmailAddress"
                    android:letterSpacing="0.1"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorTextHint"
                    android:textSize="@dimen/Size12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/Size12dp">

                <ImageView
                    android:layout_width="@dimen/Size20dp"
                    android:layout_height="@dimen/Size20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/usrusr" />

                <EditText
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Size15dp"
                    android:background="#00000000"
                    android:hint="@string/nombre"
                    android:inputType="text"
                    android:letterSpacing="0.1"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorTextHint"
                    android:textSize="@dimen/Size12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/Size12dp">

                <ImageView
                    android:layout_width="@dimen/Size20dp"
                    android:layout_height="@dimen/Size20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/usrusr" />

                <EditText
                    android:id="@+id/apellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Size15dp"
                    android:background="#00000000"
                    android:hint="@string/apellido"
                    android:inputType="text"
                    android:letterSpacing="0.1"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorTextHint"
                    android:textSize="@dimen/Size12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/Size12dp">

                <ImageView
                    android:layout_width="@dimen/Size20dp"
                    android:layout_height="@dimen/Size20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/usrusr" />

                <EditText
                    android:id="@+id/user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Size15dp"
                    android:background="#00000000"
                    android:hint="@string/usuario"
                    android:inputType="text"
                    android:letterSpacing="0.1"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorTextHint"
                    android:textSize="@dimen/Size12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/Size12dp">

                <ImageView
                    android:layout_width="@dimen/Size20dp"
                    android:layout_height="@dimen/Size20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pswd" />

                <EditText
                    android:id="@+id/pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Size15dp"
                    android:background="#00000000"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:letterSpacing="0.1"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorTextHint"
                    android:textSize="@dimen/Size12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack"></LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/Size400dp"
        android:gravity="center"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="@dimen/SizeLogo1"
            android:layout_weight="0.72"
            android:src="@drawable/logo5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/Size60dp"
        android:paddingRight="@dimen/Size60dp">

        <TextView
            android:id="@+id/actualizarData"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Size50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/Size10dp"
            android:background="@drawable/background_button_blue"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:onClick="llamarActualizar"
            android:padding="@dimen/Size16dp"
            android:text="@string/actualizar_data"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/Size12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cancelarActualizar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Size50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/Size40dp"
            android:background="@drawable/background_button_blue"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:onClick="cancelarActualizar"
            android:padding="@dimen/Size16dp"
            android:text="@string/cancelar_actualizar"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/Size12dp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>

