<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/Size60dp"
        android:paddingRight="@dimen/Size60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/Size16dp">

                <ImageView
                    android:layout_width="@dimen/Size20dp"
                    android:layout_height="@dimen/Size20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/usrusr" />

                <EditText
                    android:id="@+id/user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Size15dp"
                    android:background="#00000000"
                    android:hint="@string/usuario"
                    android:inputType="text"
                    android:letterSpacing="0.1"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorTextHint"
                    android:textSize="@dimen/Size16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="#4a5a71"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/Size16dp">

                <ImageView
                    android:layout_width="@dimen/Size20dp"
                    android:layout_height="@dimen/Size20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pswd" />

                <EditText
                    android:id="@+id/pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Size15dp"
                    android:background="#00000000"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:letterSpacing="0.1"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorTextHint"
                    android:textSize="@dimen/Size16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="#4a5a71"></LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/Size20dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/Size60dp"
        android:paddingRight="@dimen/Size60dp">

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/Size50dp"
            android:background="@drawable/background_button_blue"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:padding="@dimen/Size16dp"
            android:text="@string/login"
            android:textColor="@color/colorTextWhite"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="@string/no_tienes_cuenta_registrate"
            android:textColor="@color/colorTextHint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/Size400dp"
        android:gravity="center"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="@dimen/SizeLogo2"
            android:layout_weight="0.72"
            android:src="@drawable/logo5" />
    </LinearLayout>
</RelativeLayout>