<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text2"
        android:textStyle="normal"
        android:textColor="@color/colorTextBlack"
        android:text="@string/eleccion_primer_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:textColor="#fff"
        android:textStyle="normal"
        android:text="Cargar nuevo Formulario"
        android:id="@+id/cargarFormulario"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/hacerOtraCosa"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_button_blue_white"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:textColor="#fff"
        android:text="Hacer Otra cosa"
        android:textStyle="normal"
        android:id="@+id/hacerOtraCosa"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/cargarFormulario"
        android:layout_alignParentStart="true"
        android:background="@drawable/background_button_blue_white"/>

</RelativeLayout>