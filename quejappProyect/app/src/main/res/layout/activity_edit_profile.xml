<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_tabs_180">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/Size60dp"
        android:paddingRight="@dimen/Size60dp"
        android:paddingBottom="@dimen/Size30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/Size30dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/Size30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorLayoutBlack"
                    android:text="@string/actualice_datos_personales"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/Size12dp">
                <ImageView
                    android:layout_width="@dimen/Size20dp"
                    android:layout_height="@dimen/Size20dp"
                    android:src="@drawable/message"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/mail_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorTextBlack"
                    android:layout_marginLeft="@dimen/Size15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/Size10dp"
                    android:inputType="text"
                    android:textColor="@color/colorTextBlack"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/Size12dp">

                <ImageView
                    android:layout_width="@dimen/Size20dp"
                    android:layout_height="@dimen/Size20dp"
                    android:src="@drawable/usrusr"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/nombre_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorTextBlack"
                    android:layout_marginLeft="@dimen/Size15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/Size10dp"
                    android:inputType="text"
                    android:textColor="@color/colorTextBlack"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/Size12dp">

                <ImageView
                    android:layout_width="@dimen/Size20dp"
                    android:layout_height="@dimen/Size20dp"
                    android:src="@drawable/usrusr"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/apellido_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorTextBlack"
                    android:layout_marginLeft="@dimen/Size15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/Size10dp"
                    android:inputType="text"
                    android:textColor="@color/colorTextBlack"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack"></LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/Size30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorLayoutBlack"
                    android:text="@string/actualice_datos_sensibles"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/Size12dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:layout_width="@dimen/Size20dp"
                    android:layout_height="@dimen/Size20dp"
                    android:src="@drawable/usrusr"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/user_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorTextBlack"
                    android:layout_marginLeft="@dimen/Size15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/Size10dp"
                    android:inputType="text"
                    android:textColor="@color/colorTextBlack"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/Size12dp">
                <ImageView
                    android:layout_width="@dimen/Size20dp"
                    android:layout_height="@dimen/Size20dp"
                    android:src="@drawable/pswd"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/pwd_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorTextBlack"
                    android:layout_marginLeft="@dimen/Size15dp"
                    android:background="#00000000"
                    android:inputType="textPassword"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/Size10dp"
                    android:textColor="@color/colorTextBlack"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Size1dp"
                android:background="@color/colorLayoutBlack"></LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginBottom="@dimen/Size400dp"
        android:weightSum="1">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/Size60dp"
        android:paddingRight="@dimen/Size60dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/actualizarData"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Size50dp"
            android:background="@drawable/background_button_blue_white"
            android:text="@string/actualizar_data"
            android:textColor="@color/colorTextWhite"
            android:textStyle="bold"
            android:textSize="@dimen/Size10dp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:padding="@dimen/Size16dp"
            android:layout_marginBottom="@dimen/Size50dp"
            android:letterSpacing="0.2"
            android:onClick="actualizarDatos"
            />
    </LinearLayout>
</RelativeLayout>
